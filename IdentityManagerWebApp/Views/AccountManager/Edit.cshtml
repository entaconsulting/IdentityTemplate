
@model IdentityManagerWebApp.ViewModels.AccountManager.EditViewModel

@{
    var gridLabel = "control-label col-sm-4 col-md-4";
    var gridInput = "col-sm-8 col-md-8";
}


<h2>@ViewData["Title"]</h2>
<p class="text-success">@ViewBag.StatusMessage</p>
@using (Html.BeginForm("Edit", "AccountManager", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Editar Usuario</h4>
    <hr/>
    @Html.HiddenFor(a => a.Id)
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.UserName, new { @class = gridLabel })
        <div class="@gridInput">
            @Html.TextBoxFor(m => m.UserName, new {@class = "form-control"})
            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = gridLabel })
        <div class="@gridInput">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Guardar" class="btn btn-default" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
 

